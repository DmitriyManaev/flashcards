<div class="card-item">
  <p class="original-text"><%= card.original_text %></p>
  <p class="translated-text"><%= card.translated_text %></p>
  <p class="review-date"><%= card.review_date.strftime("%d/%m/%Y") %></p>
  <p class="card-item__links">
    <%= link_to "Просмотреть", card, title: "Просмотреть" %>
    <%= link_to "Удалить", card, method: :delete, title: "Удалить" %>
  </p>
</div>
