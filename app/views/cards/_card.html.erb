<div class="card-item">
  <div class="review-date">Дата: <%= card.review_date.strftime("%d/%m/%Y") %></div>
  <% if card.image? %>
    <%= image_tag card.image.url(:thumb).to_s %>
  <% else %>
    <%= image_tag "no_image.jpg" %>
  <% end %>
  <%= link_to card.original_text, [@pack, card], class: "original-text", title: "Смотреть" %>
</div>
