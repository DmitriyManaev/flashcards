          <%= link_to "Вход", login_path %> |
          <%= link_to "Регистрация", signup_path %>
        <% end %>
      </div>
      <% if current_user %>
        <ul class="navigation-links">
          <li><%= link_to 'Все карточки', cards_path %></li>
