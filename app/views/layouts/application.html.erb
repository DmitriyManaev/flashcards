<!DOCTYPE html>
<html>
<head>
  <title>Флэшкарточкер</title>
  <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<body>
  <div class="header clearfix">
    <div class="container">
      <a href="/" class="logo"><%= image_tag("logo.png", alt: "Флэшкарточкер") %><span>Флэшкарточкер</span></a>
      <div class="navigation-links user-nav">
        <% if current_user %>
          <%= link_to "Выход", logout_path %>
        <% else %>
          <%= link_to "Вход", login_path %> |
          <%= link_to "Регистрация", signup_path %>
        <% end %>
      </div>
      <% if current_user %>
        <div class="navigation-links">
          <%= link_to "Колоды", packs_path %>
          <%= link_to "Добавить колоду", new_pack_path %>
        </div>
      <% end %>
    </div>
  </div>
  <div id="container">
    <% flash.each do |key, value| %>
      <%= content_tag(:div, value, class: "alert alert-#{key}", id: "alert-#{key}" )%>
    <% end %>

    <div class="content">
      <%= yield %>
    </div>
    <%# debug(params) if Rails.env.development? %>
  </div>
</body>

</body>
</html>
